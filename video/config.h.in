  __pragma(warning(pop))
#elif defined(__GNUC__) || defined(__clang__)
#define WARNINGS_OFF \
  _Pragma("GCC diagnostic push") \
  _Pragma("GCC diagnostic ignored \"-Wall\"") \
  _Pragma("GCC diagnostic ignored \"-Wextra\"") \
  _Pragma("GCC diagnostic ignored \"-Wpedantic\"")
